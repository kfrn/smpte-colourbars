  "devDependencies": {
    "gh-pages": "^0.12.0"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "d3": "^4.7.0",
